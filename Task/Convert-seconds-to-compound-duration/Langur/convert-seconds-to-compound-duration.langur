val .duration = f(var .sec) {
    [
        w/wk d hr min sec/,
        for[=[]] .dm in [7 x 24 x 60 x 60, 24 x 60 x 60, 60 x 60, 60] {
            _for ~= [.sec \ .dm]
            .sec = .sec rem .dm
        } ~ [.sec],
    ]
}

for .seconds in [7259, 86400, 6000000] {
    val .dur = .duration(.seconds)
    write $"\.seconds:7; sec = "
    writeln join ", ", for[=[]] .k of .dur[1] {
        if .dur[2][.k] != 0: _for ~= [$"\.dur[2][.k]; \.dur[1][.k];"]
    }
}
