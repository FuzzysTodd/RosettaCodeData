      REM No need for BigNum library.
      REM This language uses 80bit (10 bytes!) for real values internally.
      Price = 4E15 * 5.50 + 2.0 * 2.86
      Tax   = Price * .0765
      Total = Price + Tax

      REM Number printing will use 2 decimal places and 21 positions zone
      @%=&020215
      PRINT "Price = $" Price
      PRINT "Tax   = $" Tax
      PRINT "Total = $" Total
